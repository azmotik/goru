@using Goru.Areas.AdminPanel.Enums
@model Goru.Areas.AdminPanel.Models.Order.UpdateOrderVM

@{
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}

@using(Html.BeginForm("SaveChanges", "Orders", new{ article= Model.Article }, FormMethod.Post))
{
    <div class="create-order-form">
        <p>
            <label>Артикль: </label>
            @Html.DisplayFor(m => m.Article)
        </p>
    
        <br/>
        <p>
            <label>Категория</label><br/>
            @Html.TextBoxFor(m => m.Category)
        </p>
        <br/>
        <p>
            <label>Название</label><br/>
            @Html.TextBoxFor(m => m.Name)
        </p>
        <br/>
        <p>
            <label>Размер скидки</label><br/>
            @Html.TextBoxFor(m => m.Offer)
        </p>
        <br/>
        <p>
            <label>Цена</label><br/>
            @Html.TextBoxFor(m => m.Price)
        </p>
        <br/>
        <p>
            <label>Размер(S, M, L, XL...)</label><br/>
            <select name="limit" class="form-select form-select-sm">
                @foreach (var item in Enum.GetNames(typeof(SizeEnum)))
                {
                    <option value="@item">@item</option>
                }
            </select>
        </p>
    
        <input type="submit" value="Изменить"/>
    </div>
}