@using Goru.Areas.AdminPanel.Models
@using Goru.Areas.AdminPanel.Controllers
@model OrdersVm

@{
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
    short[] arr = [5, 10, 15, 20, 25];
    
    ViewBag.Title = "Index";
    int from = (Model.Pagination.Page - 1) * Model.Pagination.Limit + 1, to = from + Model.Pagination.Limit - 1;
    int start = Model.Pagination.StartPage, end = Model.Pagination.EndPage, total = Model.Pagination.Total, limit = Model.Pagination.Limit;
}

<div class="content">
    <!-- Start Content-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
            <div class="card">
            <div class="card-body">
                <div id="datatable_wrapper" class="dataTables_wrapper dt-bootstrap5 no-footer">
                    
                    @Html.ActionLink("Добавить товар", "Create", "Orders")

                    <form method="get" asp-area="AdminPanel" asp-action="Index" asp-controller="Orders">
                        <div class="row">
                            <div class="col-sm-12 col-md-6">
                                <div class="dataTables_length" id="datatable_length">
                                    <label class="form-label">
                                        Show
                                        <select name="limit" class="form-select form-select-sm" onchange="this.form.submit()">
                                            @foreach (var item in arr)
                                            {
                                                <option selected="@(item == limit)" value="@item">@item</option>
                                            }
                                        </select> entries
                                    </label>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6">
                                <div id="datatable_filter" class="dataTables_filter">
                                    <label>
                                        Search:
                                        <input name="searching" type="search" placeholder="Search" aria-label="Search" value="@Model.Searching"/>
                                        <button type="submit">Search</button>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="datatable" class="table table-bordered dt-responsive table-responsive nowrap dataTable no-footer dtr-inline" aria-describedby="datatable_info" style="width: 1570px;">
                                <thead>
                                <tr>
                                    <th class="sorting sorting_asc" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 258.4px;" aria-sort="ascending" aria-label="Name: activate to sort column descending">Article</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 393.4px;" aria-label="Position: activate to sort column ascending">Name</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 202.4px;" aria-label="Office: activate to sort column ascending">Price</th
                                    ><th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 102.4px;" aria-label="Age: activate to sort column ascending">Offer</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 183.4px;" aria-label="Start date: activate to sort column ascending">Size</th>
                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 161.4px;" aria-label="Salary: activate to sort column ascending">Category</th>

                                    <th class="sorting" tabindex="0" aria-controls="datatable" rowspan="1" colspan="1" style="width: 161.4px;" aria-label="Salary: activate to sort column ascending">Actions</th>
                                </tr>
                                </thead>
                                <tbody>

                                @foreach (var order in Model.Orders)
                                {
                                    <tr>
                                        <td>@order.Article</td>
                                        <td>@order.Name</td>
                                        <td>$@order.Price</td>
                                        <td>@order.Offer%</td>
                                        <td>@order.Size</td>
                                        <td>@order.Category</td>
                                        <td>

                                            @Html.ActionLink("Edit", "Edit", "Orders", new {article = @order.Article})
                                            @Html.ActionLink("Delete", "Delete", "Orders", new {article = @order.Article})
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-md-5">

                            <!-- TODO: Подумать как отрефакторить -->
                            
                            @if (to > total)
                            {
                                <div class="dataTables_info" id="datatable_info" role="status" aria-live="polite">Showing @from to @total of @total entries</div>
                            }
                            else
                            {
                                <div class="dataTables_info" id="datatable_info" role="status" aria-live="polite">Showing @from to @to of @total entries</div>
                            }


                        </div>
                        <div class="col-sm-12 col-md-7">
                            <div class="dataTables_paginate paging_simple_numbers" id="datatable_paginate">
                                <ul class="pagination">

                                    @foreach (var href in ViewBag.dictionary)
                                    {
                                        <li class="paginate_button page-item @href.Value.IsEnabled @href.Value.IsActive">
                                            <a href="@href.Value.Href" aria-controls="datatable" data-dt-idx="1" tabindex="0" class="page-link">@href.Key</a>
                                        </li>
                                    }

                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                    </div>
                </div>
            </div>
        </div> <!-- end row -->
    </div> <!-- container -->
</div> <!-- content -->